@inject NavigationManager NavManager
@inject ITextTranslator Text
<li class="nav-item">
    <a class="nav-link" href="javascript:void(0)" id="dropdownLanguage"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="fa fa-language">
        </i>
    </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownLanguage" style="position: absolute;background-color: #fff; border: 1px solid rgba(0,0,0,.15);">
        <a class="dropdown-item" href="javascript:void(0)" @onclick="@(() => SwitchLang("en"))">English</a>
        <a class="dropdown-item" href="javascript:void(0)" @onclick="@(() => SwitchLang("vi"))">Tiếng Việt</a>
    </div>
</li>

@code{

    [Inject] NavigationManager _navManager { get; set; }

    private void SwitchLang(string lang)
    {
        Text.SetLang(lang);
        //AppState.NotifyStateChanged();
        _navManager.NavigateTo(_navManager.Uri, forceLoad: true);
    }
}