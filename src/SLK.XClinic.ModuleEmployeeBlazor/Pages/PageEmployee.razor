                                                    @if(_dataSourceDocument.Count == 0)
                                                    {
                                                        <div class="col-10">
                                                            <h6 style="color: #777;">Bạn chưa có tài liệu.</h6>
                                                        </div>
                                                        <div class="col-2 pr-0 mb-2 document text-right">
                                                            <button class="btn btn-success" type="button" @onclick="(() => _modalVisibleDocument = true)">@Text["Upload", "Upload"]</button>                                                        
                                                        </div>
                                                    }else{
                                                        @foreach (var item in _dataSourceDocument.EmptyIfNull().Select((x,y) => new {x,y}))
                                                        {
                                                            if(item.y == 0)
                                                            {
                                                                tamp = item.x.FolderName;
                                                                <div class="col-10 textother">
                                                                    <small class="aa"><span>@item.x.FolderName</span></small>
                                                                    <hr style="margin-top: 30px; background-color: #2AD360;">
                                                                </div>
                                                                <div class="col-2 pr-0 mb-2 document text-right">
                                                                    <button class="btn btn-success" type="button" @onclick="(() => {_modalVisibleDocument = true; _folderName = item.x.FolderName;})" >@Text["Upload", "Upload"]</button>                                                        
                                                                </div>
                                                            }
                                                            else
                                                            {
                                                                if(tamp != item.x.FolderName)
                                                                {
                                                                    <div class="col-10 textother">
                                                                        <small class="aa"><span>@item.x.FolderName</span></small>
                                                                        <hr style="margin-top: 30px; background-color: #2AD360;">
                                                                    </div>
                                                                    <div class="col-2 pr-0 mb-2 document text-right">
                                                                        <button class="btn btn-success" type="button" @onclick="(() => {_modalVisibleDocument = true; _folderName = item.x.FolderName;})" >@Text["Upload", "Upload"]</button>                                                        
                                                                    </div>
                                                                }
                                                            }
                                                            <div class="col-10 mb-3">
                                                                <div class="row">
                                                                    <div class="col-2 col-md-2 col-lg-1">
                                                                        @if(item.x.TypeFile == "jpg" || item.x.TypeFile == "png" || item.x.TypeFile == "jpeg"){
                                                                            <i style="font-size: 50px; color: rgb(0, 119, 255)" class="fas fa-file-image"></i>
                                                                        }
                                                                        @if(item.x.TypeFile == "pdf"){
                                                                            <i style="font-size: 50px; color: red" class="fas fa-file-pdf"></i>
                                                                        }
                                                                    </div>
                                                                    <div class="col-10 col-md-10 col-lg-11">
                                                                        <h5>
                                                                            @item.x.NameFile.GetAfterLast("/").Trim()                                                                
                                                                        </h5>
                                                                        <h6>
                                                                            @{
                                                                                var emp = _displaySourse.SingleOrDefault(x => x.Guid == item.x.GuidEmployeePost);
                                                                                <span>@Text["Upload by: ","Tải lên bởi: "] @Text[emp.FirstName + " " + emp.LastName,emp.LastName + " " + emp.FirstName] @(emp.Email != "" ? $" - {emp.Email} " : "")</span>
                                                                            }
                                                                        </h6>
                                                                        <h6 style="color: #777; font-size: 14px;">@TimeAgo(item.x.DateCreated)</h6>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="col-2 mb-3 text-right">
                                                                <SfDropDownButton CssClass="e-caret-hide" style="padding-left: 13px;" IconCss="fas fa-ellipsis-v">
                                                                    <DropDownMenuItems> 
                                                                        <DropDownButtonEvents ItemSelected="SelectedTaskDocument"></DropDownButtonEvents>   
                                                                        <DropDownMenuItem Id="@item.x.NameFile" Text="@Text["View","Xem"]"></DropDownMenuItem>    
                                                                        <DropDownMenuItem Id="@item.x.NameFile" Text="@Text["Download","Tải xuống"]"></DropDownMenuItem>  
                                                                        <DropDownMenuItem Id="@item.x.Id.ToString()" style="color: red" Text="@Text["Delete","Xóa"]"></DropDownMenuItem>    
                                                                    </DropDownMenuItems>
                                                                </SfDropDownButton> 
                                                            </div>
                                                        }
                                                    }                                                               
                                                </div>                                        
                                            </div>
                                        </div>                               
                                    </ContentTemplate>
                                </TabItem>
                        </TabItems>                    
                    </SfTab>
                </div>
            </div>
        </div>
    </div>
</div>

