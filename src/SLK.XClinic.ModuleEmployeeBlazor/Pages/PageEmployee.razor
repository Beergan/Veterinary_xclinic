                                                <div class="col-xl-6 col-lg-6 col-md-5 col-sm-6 col-5 mt-2">
                                                    @if (_modalVisibleRelativeInformation)
                                                    {
                                                        <i class="fas fa-save float-right" style="color: #8861bb; font-size: 17px" @onclick="OnFormSubmitProfessionalInformation"></i>
