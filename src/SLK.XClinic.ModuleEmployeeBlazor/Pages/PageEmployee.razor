                                                    {
                                                        @(_model.DateOfBirth != null ? Text[_model.DateOfBirth.Value.ToString("MM/dd/yyyy"), _model.DateOfBirth.Value.ToString("dd/MM/yyyy")] : Text["Date of birth not updated!", "Chưa cập nhật ngày sinh!"])
